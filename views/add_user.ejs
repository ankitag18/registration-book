<html>

<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="css/auto-complete.css">

    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>

<body>
    <h2 style="text-align: center">Create User</h2>
    <form style="width:30%; margin:40px auto" method="POST" action="/createUser">
        <div class="form-group">
            <label for="">Name</label>
            <input id="form-autocomplete" class="form-control" placeholder="Enter name" name="name" maxlength="50">
        </div>
        <div class="form-group">
            <label for="">Email</label>
            <input class="form-control" placeholder="Enter email" name="email" maxlength="100">
        </div>
        <div class="form-group">
            <label for="">Mobile No.</label>
            <input class="form-control" placeholder="Enter mobile no." name="mobile_no" maxlength="10">
        </div>
        <div class="form-group">
            <label for="">Place of Residence</label>
            <input class="form-control" placeholder="Enter residence" name="location" maxlength="100">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

    <script src="js/auto-complete.min.js"></script>
    <script> 

        new autoComplete({
            selector: 'input[name="name"]',
            minChars: 1,
            source: function (term, response) {
                var data = $.get('/userDetails/name', function (users) {
                    // console.log(users);
                    response(users);
                });
            },
        });

        new autoComplete({
            selector: 'input[name="email"]',
            minChars: 1,
            source: function (term, response) {
                var data = $.get('/userDetails/email', function (users) {
                    // console.log(users);
                    response(users);
                });
            },
        });

        new autoComplete({
            selector: 'input[name="mobile_no"]',
            minChars: 1,
            source: function (term, response) {
                var data = $.get('/userDetails/mobile_no', function (users) {
                    // console.log(users);
                    response(users);
                });
            },
        });

        new autoComplete({
            selector: 'input[name="location"]',
            minChars: 1,
            source: function (term, response) {
                var data = $.get('/userDetails/location', function (users) {
                    // console.log(users);
                    response(users);
                });
            },
        });
    </script>

</body>

</html>